[colors]
background = #fbf1c7
foreground = #3c3836

black =   #fbf1c7
red =     #cc241d
orange =   #d65d0e
yellow =  #d79921
blue =    #458588
magenta = #b16286
cyan =    #689d6a
white =   #7c6f64

[bar/main]
monitor =
width = 100%
height = 35
radius = 0.0
fixed-center = true
bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

border-size = 0
line-size = 2
padding = 1
module-margin = 1

font-0 = "Noto Sans Mono:size=12"
font-1 = "Noto Sans Mono:size=12"
font-2 = "Noto Sans Symbols:size=16"
font-3 = "Noto Sans Symbols2:size=16"

modules-right = ewmh date lock
modules-center = xwindow
modules-left = battery cpu github eth wlan

tray-position = right
tray-padding = 2
tray-maxsize = 24

[global/wm]
margin-top = 0

[module/xwindow]
type = internal/xwindow
label = %title:0:100:...%

[module/ewmh]
type = internal/xworkspaces
pin-workspaces = false
enable-click = false
enable-scroll = false

label-active = " %name% "
label-active-underline = ${colors.orange}

label-occupied = " %name% "
label-urgent = " %name% "
label-empty = " %name% "
label-empty-foreground = ${colors.white}

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "💻 "
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.red}
label = %percentage:2%%

[module/wlan]
type = internal/network
interface = wlp59s0
interval = 5.0

format-connected = <ramp-signal> <label-connected>
format-connected-underline = ${colors.magenta}
label-connected = %essid% %local_ip%

label-disconnected =

ramp-signal-0 = 🌧
ramp-signal-1 = 🌦
ramp-signal-2 = 🌥
ramp-signal-3 = 🌤
ramp-signal-4 = 🌣

[module/eth]
type = internal/network
interface = eno1
interval = 3.0

format-connected-underline = ${colors.magenta}
format-connected-prefix = "🖧 "
format-connected-prefix-foreground = ${colors.foreground}
label-connected = %local_ip%

format-disconnected =

[module/date]
type = internal/date
interval = 5

date = "%a %d"
time = %H:%M

format-prefix =
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.blue}

label = %date% %time%

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = <label-charging>
format-charging-underline = ${colors.yellow}

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-underline = ${self.format-charging-underline}

format-full = <label-full>
format-full-underline = ${self.format-charging-underline}

ramp-capacity-0 = ⚋
ramp-capacity-1 = ⚊
ramp-capacity-2 = ⚍
ramp-capacity-3 = ⚌
ramp-capacity-foreground = ${colors.foreground}

label-charging = ⚡ %percentage%%
label-discharging = %percentage%%
label-full = " ☀ "

[module/github]
type = internal/github
token = ${file:/home/jimmy/.config/github/notifications.token}
empty-notifications = false
label = 📫 %notifications%
interval = 10
label-underline = ${colors.blue}

[module/lock]
type = custom/text
content = 🔒
